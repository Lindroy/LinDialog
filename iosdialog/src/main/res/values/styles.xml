<resources>

    <!--缩放动画 parent="android:Animation"-->
    <style name="ScaleDialogStyle" >
        <item name="android:windowEnterAnimation">@anim/dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_anim</item>
    </style>

    <!--对话框标题样式-->
    <style name="DialogTitleStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/lin_dialog_title_text_size</item>
        <item name="android:textColor">@color/lin_dialog_text_color_black</item>
        <item name="android:fontFamily">@string/title_font_type</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--对话框信息样式-->
    <style name="DialogMessageStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/lin_dialog_message_text_size</item>
        <item name="android:textColor">@color/lin_dialog_text_color_black</item>
    </style>

    <style name="DialogButtonStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/lin_dialog_message_text_size</item>
        <item name="android:fontFamily">@string/title_font_type</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/lin_dialog_button_height</item>
    </style>

</resources>
